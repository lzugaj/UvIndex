<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>

    <!-- Image View Style -->
    <style name="IvStyle">
        <item name="android:layout_width">@dimen/ivSize</item>
        <item name="android:layout_height">@dimen/ivSize</item>
        <item name="android:src">@drawable/auth_logo</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginBottom">@dimen/marginBottom</item>
        <item name="android:contentDescription">@string/iv_description</item>
    </style>

    <!-- Edit Text Style -->
    <style name="EtStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/etTextSize</item>
        <item name="android:textAlignment">center</item>
    </style>

    <!-- Button Style -->
    <style name="BtnStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">@dimen/etTextSize</item>
        <item name="android:text">@string/login</item>
        <item name="android:layout_marginTop">@dimen/marginTop</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@color/btnLoginTextColor</item>
        <item name="android:enabled">false</item>
    </style>

</resources>
