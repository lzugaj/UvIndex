<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>

    <!-- Main Activity -->
    <!-- Image View Style -->
    <style name="IvLoginStyle">
        <item name="android:layout_width">@dimen/ivSize</item>
        <item name="android:layout_height">@dimen/ivSize</item>
        <item name="android:src">@drawable/auth_logo</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginBottom">@dimen/marginBottom</item>
        <item name="android:contentDescription">@string/iv_description</item>
    </style>

    <!-- Edit Text Style -->
    <style name="EtLoginStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/etTextSize</item>
        <item name="android:textAlignment">center</item>
    </style>

    <!-- Button Style -->
    <style name="BtnLoginStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">@dimen/etTextSize</item>
        <item name="android:text">@string/login</item>
        <item name="android:layout_marginTop">@dimen/marginTop</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@color/btnLoginTextColor</item>
        <item name="android:enabled">false</item>
    </style>

    <!-- User Activity -->
    <!-- Spinner Style -->
    <style name="LocationSpinnerStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">?android:attr/textAppearanceLarge</item>
        <item name="android:layout_marginBottom">@dimen/marginBottomUser</item>
    </style>

    <!-- Linear Layout for date picker buttons Style -->
    <style name="LLButtonDatePickers">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginBottom">@dimen/marginBottomUser</item>
    </style>

    <!-- Parent Button Style -->
    <style name="BtnDatePickerStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>

    <!-- DateFrom Button Style -->
    <style name="BtnDateFromStyle.BtnDatePickerStyle" parent="BtnDatePickerStyle">
        <item name="android:text">@string/date_from</item>
    </style>

    <!-- DateTo Button Style -->
    <style name="BtnDateToStyle.BtnDatePickerStyle" parent="BtnDatePickerStyle">
        <item name="android:text">@string/date_to</item>
    </style>

    <!-- Search Button Style -->
    <style name="BtnSearchStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/button_search</item>
        <item name="android:layout_marginBottom">@dimen/marginBottomUser</item>
    </style>

    <!-- RecyclerView Style -->
    <style name="RecyclerViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- UvIndexCardDialog -->
    <!-- Linear Layout for Card View Style -->
    <style name="LLCardViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:padding">@dimen/paddingCardView</item>
    </style>

    <!-- Linear Layout for Card View Content Style -->
    <style name="LLContentStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">5</item>
        <item name="android:orientation">vertical</item>
    </style>

    <!-- TextView Location Style -->
    <style name="TvLocationStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
    </style>

    <!-- Linear Layout for UvIndexText Style -->
    <style name="LLCardTextViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <!-- Parent Button Style -->
    <style name="TvStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>

    <!-- TextView UvIndex Text Style -->
    <style name="TvUvIndexText.TvStyle" parent="TvStyle">
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:text">@string/uvIndexText</item>
    </style>

    <!-- TextView UvIndex Value Style -->
    <style name="TvUvIndexValue.TvStyle" parent="TvStyle">
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>

    <!-- TextView Date Text Style -->
    <style name="TvDateText.TvStyle" parent="TvStyle">
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:text">@string/dateText</item>
    </style>

    <!-- TextView Date Value Style -->
    <style name="TvDateValue.TvStyle" parent="TvStyle">
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>

    <!-- ImageView Style -->
    <style name="IvInfoStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/ivHeight</item>
        <item name="android:layout_weight">1</item>
        <item name="android:src">@drawable/info</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:contentDescription">@string/iv_info_description</item>
    </style>

    <!-- CardDialog Info -->
    <!-- Linear Layout Card Info Style -->
    <style name="LLCardViewCityInfo">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <!-- Text for all Card View Text -->
    <style name="CardViewInfoText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>

    <!-- Card View City Text -->
    <style name="TvCityText.CardViewInfoText" parent="CardViewInfoText">
        <item name="android:text">@string/cityText</item>
    </style>

    <!-- Card View UvIndex Text -->
    <style name="TvUvIndexText.CardViewInfoText" parent="CardViewInfoText">
        <item name="android:text">@string/uvIndexText</item>
    </style>

    <!-- Card View Date Text -->
    <style name="TvDateText.CardViewInfoText" parent="CardViewInfoText">
        <item name="android:text">@string/dateText</item>
    </style>

    <!-- Card View values - City, UvIndex and Date -->
    <style name="CardViewInfoValues">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
    </style>

</resources>
